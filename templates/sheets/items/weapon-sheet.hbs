<form action="{{cssClass}}" class="weapon" autocomplete="off">
  <div style="display: flex;">
    <div style="flex: 64px;padding: 0 5px;">
      <img width="64px" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>
    <div style="flex: calc(100% - 64px);display: flex;flex-wrap:wrap;padding: 0 5px;">
      <div style="flex: 100%">
        <h1>
          <input height="64px" name="name" type="text" value="{{item.name}}" placeholder="Name" />
        </h1>
      </div>
      <div style="flex: 50%">
        <label for="data.range">Portée</label>
        <select name="data.range">
          {{#select data.range}}
          {{#each config.ranges as |name type|}}
          <option value="{{type}}">{{localize name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>
      <div style="flex: 50%">
        <label for="data.damages">Dégâts</label>
        <input type="number" id="data.damages" name="data.damages" data-dtype="Number" value="{{data.damages}}" />
      </div>
    </div>
  </div>
</form>