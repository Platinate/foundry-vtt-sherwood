<form action="{{cssClass}}" class="object" autocomplete="off">
  <div class="object__header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <h1><input
        type="text"
        data-dtype="String"
        name="name"
        value="{{item.name}}"
      /></h1>
  </div>
  <div class="object__footer">
    {{editor
      content=data.description
      target="data.description"
      button=true
      owner=owner
      editable=true
    }}
  </div>
</form>