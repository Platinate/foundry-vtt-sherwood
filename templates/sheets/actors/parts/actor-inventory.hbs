<div style="display: flex;">
  <div style="flex:50%; padding: 0 5px;">
    <h3 style="display: flex;justify-content:space-around; align-items: center">
      <p>{{localize "sherwood.sheet.weapons"}}</p>
    </h3>
    <table>
      <colgroup>
        <col style="width: 42px;" />
        <col style="width: calc(75% - 42px);" />
        <col style="width: 20%;" />
        <col style="width: 5%;" />
      </colgroup>
      <tr>
        <th>{{localize "sherwood.sheet.name"}}</th>
        <th></th>
        <th>{{localize "sherwood.sheet.damages"}}</th>
        <th></th>
      </tr>
      {{#each weapons as |weapon|}}
        <tr class="weapon" data-item-id="{{weapon._id}}">
          <td><img
              style="height: 32px;"
              src="{{weapon.img}}"
              data-edit="img"
              title="{{weapon.name}}"
            /></td>
          <td>
            <h4 style="font-weight: bold; text-align: center;">
              <input
                class="inline-edit"
                data-field="name"
                type="text"
                value="{{weapon.name}}"
              />
            </h4>
          </td>
          <td>
            <input
              style="height: 100%;text-align:center;font-size: 1.2em;"
              type="number"
              data-dtype="Number"
              data-field="data.damages"
              value="{{data.damages}}"
              class="inline-edit"
            />
          </td>
          <td style="text-align: center;">
            <a class="item-delete" data-item-id="{{weapon._id}}">
              <i class="fas fa-trash"></i>
            </a>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
  <div style="flex:50%; padding: 0 5px;">
    <h3 style="display: flex;justify-content:space-around; align-items: center">
      <p>{{localize "sherwood.sheet.objects"}}</p>
    </h3>
    <table>
      <colgroup>
        <col style="width: 42px;" />
        <col style="width: calc(50% - 42px);" />
        <col style="width: 20%;" />
        <col style="width: 5%;" />
      </colgroup>
      <tr>
        <th>{{localize "sherwood.sheet.name"}}</th>
        <th></th>
        <th>{{localize "sherwood.sheet.quantity"}}</th>
        <th></th>
      </tr>
      {{#each objects as |object|}}
        <tr class="object" data-item-id="{{object._id}}">
          <td><img
              style="height: 32px;"
              src="{{object.img}}"
              data-edit="img"
              title="{{object.name}}"
            /></td>
          <td>
            <h4 style="font-weight: bold; text-align: center;">
              <input
                class="inline-edit"
                data-field="name"
                type="text"
                value="{{object.name}}"
              />
            </h4>
          </td>
          <td>
            <input
              style="height: 100%;text-align:center;font-size: 1.2em;"
              type="number"
              data-dtype="Number"
              data-field="data.quantity"
              value="{{data.quantity}}"
              class="inline-edit"
            />
          </td>
          <td style="text-align: center;">
            <a class="item-delete" data-item-id="{{object._id}}">
              <i class="fas fa-trash"></i>
            </a>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>